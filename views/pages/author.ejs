<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>
    <!-- Page Loader -->
    <div id="loader-wrapper">
      <div id="loader"></div>

      <div class="loader-section section-left"></div>
      <div class="loader-section section-right"></div>
    </div>

    <%- include('../partials/nav'); %>

    <div class="container-fluid tm-container-content tm-mt-60">
      <div class="row mb-4">
        <h2 class="col-12 tm-text-primary"><%= authorInfo[0].author_name %></h2>
        <h3><%= authorInfo[0].nationality %></h3>
      </div>

      <div class="row tm-mb-90">
        <div class="col-xl-8 col-lg-7 col-md-6 col-sm-12">
          <img src="/img/<%= authorInfo[0].author_name + '.png'%>" alt="" />
        </div>
      </div>
      <div class="row mb-4">
        <h2 class="col-12 tm-text-primary">Books</h2>
      </div>
    </div>

    <ul class="list-group">
      <% for(let i=0;i<allBooksByAuthor.length;i++) {%>
         <%- include('../partials/listbooks',{data:allBooksByAuthor[i]}); %>
         <% } %>
    </ul>
    <!-- container-fluid, tm-container-content -->

    <footer class="tm-bg-gray pt-5 pb-3 tm-text-gray tm-footer">
      <div class="container-fluid tm-container-small"></div>
    </footer>

    <script src="js/plugins.js"></script>
    <script>
      $(window).on('load', function () {
        $('body').addClass('loaded');
      });
    </script>
  </body>
</html>
